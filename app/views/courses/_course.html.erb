<div id="<%= dom_id course %>" class="max-w-sm overflow-hidden rounded-b shadow-lg hover:bg-red-50 ">
  <%= link_to course, class: 'flex flex-col' do %>

    <% if course.image.present? %>
      <%= image_tag course.image, class: 'w-full, rounded-t' %>
    <% else %>
      <%= image_tag('https://via.placeholder.com/300') %>
    <% end %>
  <% end %>

  <div class="flex flex-col justify-between px-6 py-4 grow">
    <div>
      <div class="flex items-center justify-between mb-2 text-xl font-bold">
        <%= course.title %>
      </div>
      <p class="text-sm font-extralight">Jackson Pires</p>
      <div>
        <p class="font-light text-md">Free</p>
      </div>
    </div>
  </div>
</div>
